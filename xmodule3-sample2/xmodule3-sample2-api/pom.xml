            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <finalName>xmodule3-sample2-api</finalName>
    </build>

    <modules>
        <module>xmodule3-sample2-api-facade</module>
        <module>xmodule3-sample2-api-runtime</module>
